#!/usr/bin/env ruby
require_relative '../config/boot'
require 'irb'

def reload!
  $VERBOSE = nil
  puts "Перезагрузка файлов проекта..."
  reloaded_files = Dir["#{__dir__}/../lib/**/*.rb"].each { |file| load file }
  puts "Перезагрузка завершена. Количество перезагруженных файлов: #{reloaded_files.size}"
end

IRB.start
